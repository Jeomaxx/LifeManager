modules = ["php-8.2", "web", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["php83", "mysql80"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel App"

[[workflows.workflow]]
name = "Laravel App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37163
externalPort = 3001

[agent]
expertMode = true

[deployment]
deploymentTarget = "autoscale"
run = ["php", "artisan", "serve", "--host=0.0.0.0", "--port=5000", "--env=production"]
build = ["npm", "run", "build"]
